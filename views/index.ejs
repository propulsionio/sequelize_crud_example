<!DOCTYPE html>
<html>
  <head>
    <title>Project Management</title>
    <link rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'/>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <div class="col-md-offset-2 col-md-8">
        <center><h3>Projects</h3></center>
        
        <a href="/add_project" class="btn btn-success">Add Project</a>
        <br/>
        <br/>
        
        <table class="table table-striped table-bordered">
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Team Size</th>
            <th>Action</th>    
          </tr>          
          <%for(var i = 0; i < projects.length; i++){%>
           <tr>
            <td><%=projects[i].name%></td>
            <td><%=projects[i].description%></td>
            <td><%=projects[i].totalTeamMembers%></td>
            <td>
              <a href="/edit_project/<%=projects[i].id%>"  class="btn btn-primary">Edit</a>
              <a href="/projects/<%=projects[i].id%>/tasks" class="btn btn-default">Tasks</a>
            </td>
           </tr>
          <%}%>
          
        </table>
          
            
      </div>
    </div> 
    
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"/>
  </body>
</html>
